<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:orientation="vertical">
    <!--
        cardCornerRadius 这是设置圆角大小
        cardElevation这是设置z轴的阴影
        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_wan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_wan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_author"
                android:text="作者"
                android:layout_toRightOf="@+id/iv_item_wan"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_name"
                android:layout_alignParentRight="true"
                android:text="平台名称"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_title"
            android:singleLine="true"
            android:layout_gravity="center"
            android:text="标题"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_love"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/item_love"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/iv_item_clock"
                android:src="@mipmap/item_clock"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_item_love"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_time"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_item_clock"
                android:layout_centerVertical="true"
                android:text="时间"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_fresh"
                android:text="新"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
